<!DOCTYPE html>

<html>
<head>
	<meta charset='utf-8'/>
	<title>Refugees in Lesbos</title>
	<meta name="viewport" content="width=device-width,initial-scale=1.0"/>
	<!--mobile-->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
	<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
</head>

<body>

<div class="container">
		<div class="panel-group" id="accordion">

			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a href="#started" id="map_trigger" data-toggle="collapse" data-parent ="accordion"><%= image_tag "house.png", class: "displayed" %></a>
					</h4>
				</div>
				<div id="started" class="panel-collapse collapse">
					<div style='width: 800px;'>
					  <div id="map" style='width: 800px; height: 400px;'></div>
					</div>
					<div class="panel-body">
						<table class="table">
						  <thead>
						    <tr>
						      <th>#</th>
						      <th>Name</th>
						      <th>Address</th>
						      <th>Website</th>
						      <th>Phone</th>
						      <th>Hours</th>
						      <th>Price</th>
						      <th>Proof Required</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% @resources.each_with_index do |resource, index| %>
						  	<% if resource.category == "Shelter" %>
						    <tr>
						      <th scope="row"><%= index+1 %></th>
						      <td><%= resource.name %></td>
						      <td><%= resource.location  %></td>
						      <td><a href="<%= resource.website %>"><%= resource.website  %></a></td>
						      <td><%= resource.phone  %></td>
						      <td><%= resource.hours  %></td>
						      <td><%= resource.price  %></td>
						      <td><%= resource.proof_required  %></td>
						    </tr>
						    <% end %>
						    <% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a href="#materials" data-toggle="collapse" data-parent ="accordion"><%= image_tag "foodwater.png", class: "displayed" %></a>
					</h4>
				</div>
				<div id="materials" class="panel-collapse collapse">
					<div class="panel-body">
						<table class="table">
						  <thead>
						    <tr>
						      <th>#</th>
						      <th>Name</th>
						      <th>Address</th>
						      <th>Website</th>
						      <th>Phone</th>
						      <th>Hours</th>
						      <th>Price</th>
						      <th>Proof Required</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% @resources.each_with_index do |resource, index| %>
						  	<% if resource.category == "food_and_water" %>
						    <tr>
						      <th scope="row"><%= index+1 %></th>
						      <td><%= resource.name %></td>
						      <td><%= resource.location  %></td>
						      <td><a href="<%= resource.website %>"><%= resource.website  %></a></td>
						      <td><%= resource.phone  %></td>
						      <td><%= resource.hours  %></td>
						      <td><%= resource.price  %></td>
						      <td><%= resource.proof_required  %></td>
						    </tr>
						    <% end %>
						    <% end %>
						  </tbody>
						</table>
					</div>
				</div>


			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a href="#collect" data-toggle="collapse" data-parent ="accordion"><%= image_tag "med.png", class: "displayed" %></a>
					</h4>
				</div>
				<div id="collect" class="panel-collapse collapse">
					<div class="panel-body">
						<table class="table table-inverse">
						  <thead>
						    <tr>
						      <th>#</th>
						      <th>Name</th>
						      <th>Address</th>
						      <th>Website</th>
						      <th>Phone</th>
						      <th>Hours</th>
						      <th>Price</th>
						      <th>Proof Required</th>
						    </tr>
						  </thead>
						  <tbody>
						  	<% @resources.each_with_index do |resource, index| %>
						  	<% if resource.category == "medical" %>
						    <tr>
						      <th scope="row"><%= index+1 %></th>
						      <td><%= resource.name %></td>
						      <td><%= resource.location  %></td>
						      <td><a href="<%= resource.website %>"><%= resource.website  %></a></td>
						      <td><%= resource.phone  %></td>
						      <td><%= resource.hours  %></td>
						      <td><%= resource.price  %></td>
						      <td><%= resource.proof_required  %></td>
						    </tr>
						    <% end %>
						    <% end %>
						  </tbody>
						</table>
					</div>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4 class="panel-title">
						<a href="#grow" data-toggle="collapse" data-parent ="accordion"><%= image_tag "bus.png", class: "displayed" %></a>
					</h4>
				</div>
				<div id="grow" class="panel-collapse collapse">

					<div class="panel-body">
					</div>
				</div>
			</div>

		</div>
	</div>


</body>



</html>

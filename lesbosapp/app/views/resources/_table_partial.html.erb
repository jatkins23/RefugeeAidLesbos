<table class="table table-inverse">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Phone</th>
      <th>Proof Required</th>
    </tr>
  </thead>
  <tbody>
  <% resources.each do |resource| %>
    <tr>
      <td>
      	<%= link_to resource.name, resource.website %>
      </td>
      <td>
        <% if (!resource.lat.nil? && !resource.lng.nil?) %>
          <% if resource.location.nil? %>
            <% resource.location = "Location" %>
        <% end %>
          <%= link_to resource.location, "https://www.google.com/maps/preview/@39.377632,26.249278,11z"%>
        <% else %>
          <%= resource.location %>
        <% end %>
      </td>
      <td><a href="/#"><%= resource.phone %></a></td>
      <td><%= resource.proof_required ? "YES" : "NO" %></td>
    </tr>
  <% end %>
	</tbody>
</table>